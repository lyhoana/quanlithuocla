@model IEnumerable<QLTL_V2.Models.Customer>

<h2>Khách Hàng</h2>


<table cellpadding="0" cellspacing="0" border="0">

<tr>
<td align="center">
<a href="@Url.Action("About", "Home")">
	<img src="../../Content/Images/NewIcon.gif"/></a> 

    <br />  <bold>Tạo Mới</bold>
</td>

</tr>
</table>









@using (Html.BeginForm())
{
    <p>
        Tìm Theo Tên: @Html.TextBox("SearchString") &nbsp;
        <input type="submit" value="Tìm" /></p>
}
<table>
    <tr>
        <th>
            @Html.ActionLink("Tên", "Index", new { sortOrder=ViewBag.NameSortParm })
        </th>
        <th>
            Địa Chỉ
        </th>
       
        <th>
            Số ĐT
        </th>
        <th>
            @Html.ActionLink("Loại Khách Hàng", "Index", new { sortOrder=ViewBag.NameSortParm })
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerType.Name)
        </td>
        <td>
           
        <div id="link_icon">
        <a href="@Url.Action("Edit", "Customer", new { id = @item.CustomerId })"> <img src="../../Content/Images/edit-icon.png " height="25px" width="25px"/></a> 
        <a href="@Url.Action("Details", "Customer", new { id = @item.CustomerId })"><img src="../../Content/Images/detail-icon.png" height="25px" width="25px" /></a> 
        <a href="@Url.Action("FirstCreate", "Order", new { id = @item.CustomerId })"><img src="../../Content/Images/order-icon.png" height="25px" width="25px"/></a> 

        </div>

          @*  @Html.ActionLink("Chỉnh sửa", "Edit", new { id=item.CustomerId }) |
            @Html.ActionLink("Chi Tiết", "Details", new { id=item.CustomerId }) |
         
            @Html.ActionLink("Tạo Hóa Đơn Bán Hàng", "FirstCreate", "Order", new { id = item.CustomerId }, null) *@
        </td>
    </tr>
}

</table>
