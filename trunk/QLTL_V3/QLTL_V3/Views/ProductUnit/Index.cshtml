@model IEnumerable<QLTL_V3.Models.ProductUnit>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            Name
        </th>
        <th>
            CreatedTime
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedTime)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ProductUnitId }) |
            @Html.ActionLink("Details", "Details", new { id=item.ProductUnitId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ProductUnitId })
        </td>
    </tr>
}

</table>
